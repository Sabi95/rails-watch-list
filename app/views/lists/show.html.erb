<div class="container mt-3">
  <h1><%= @list.name %> Movies</h1>

  <% if @list.bookmarks.any? %>
    <div class="cards mt-3">
      <% @list.bookmarks.each do |bookmark| %>
        <div>
          <%= render 'movie_card', movie: bookmark.movie, bookmark: bookmark %>
        </div>
      <% end %>
    </div>
  <% else %>
    <li>No movies yet</li>
  <% end %>
  <%= link_to 'Add New Movie', new_list_bookmark_path(@list), class:'btn btn-info btn-lg mt-5' %>
</div>

<div class="container  mt-3">
  <%= link_to "Go back", lists_path, class:"text-decoration-none" %>
</div>
